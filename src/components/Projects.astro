---
import Email from "./icons/Email.astro";
import GitHub from "./icons/GitHub.astro";
import LinkedIn from "./icons/LinkedIn.astro";

const projects = [
  {
    title: "Inventory Management System",
    description:
      "Web application for efficient inventory management using React and Node.js.",
    technologies: ["React", "Node.js", "MongoDB", "Tailwind CSS"],
    link: "https://github.com/yourusername/inventory-project",
  },
  {
    title: "Data Analysis Dashboard",
    description:
      "Interactive dashboard with data visualizations using Power BI and Python.",
    technologies: ["Python", "Power BI", "Pandas"],
    link: "https://github.com/yourusername/dashboard-project",
  },
  {
    title: "Personal Website",
    description:
      "Portfolio built with Astro and Tailwind CSS to showcase my projects.",
    technologies: ["Astro", "Tailwind CSS"],
    link: "https://github.com/yourusername/portfolio",
  },
];
---

<section class="p-4 pt-8 bg-white">
  <!-- Título -->
  <h2 class="text-2xl sm:text-3xl font-bold text-pink-500 dark:text-pink-400 text-center sm:text-left">
    Projects
  </h2>

  <!-- Proyectos -->
  <div class="grid gap-6 grid-cols-1 sm:grid-cols-2 mt-6">
    {projects.map((project) => (
      <div class="border rounded-lg p-4 shadow-md hover:shadow-lg transition-shadow duration-200">
        <!-- Título del proyecto y enlace -->
        <div class="flex justify-between items-center">
          <h3 class="text-lg sm:text-xl font-semibold text-gray-700">
            {project.title}
          </h3>
          <a
            aria-label="GitHub"
            href={project.link}
            title={project.title}
            target="_blank"
            rel="noopener noreferrer"
            class="text-pink-600 flex items-center justify-center h-9 w-9 rounded-md hover:bg-pink-100 dark:hover:bg-neutral-800 focus-visible:ring-2 focus-visible:ring-pink-300 transition-all duration-150"
          >
            <GitHub class="h-5 w-5" />
          </a>
        </div>

        <!-- Descripción del proyecto -->
        <p class="text-sm text-gray-600 mt-2">{project.description}</p>

        <!-- Tecnologías utilizadas -->
        {project.technologies && (
          <ul
            class="mt-2 flex flex-wrap gap-2 text-xs text-gray-500"
          >
            {project.technologies.map((tech) => (
              <li class="bg-pink-200 text-pink-700 px-2 py-1 rounded-full">
                {tech}
              </li>
            ))}
          </ul>
        )}
      </div>
    ))}
  </div>
</section>


<style>
  /* Personalización del scrollbar */
  .scroll-custom::-webkit-scrollbar {
    width: 8px; /* Ancho de la barra de desplazamiento */
  }

  .scroll-custom::-webkit-scrollbar-track {
    background: #ffffff00; /* Color del fondo de la pista del scroll */
  }

  .scroll-custom::-webkit-scrollbar-thumb {
    background-color: #888; /* Color del scroll */
    border-radius: 10px; /* Borde redondeado */
    border: 2px solid #ffffff00; /* Espacio alrededor del scroll */
  }

  .scroll-custom::-webkit-scrollbar-thumb:hover {
    background-color: #888; /* Color cuando el usuario interactúa con el scroll */
  }

  /* Soporte para Firefox */
  .scroll-custom {
    scrollbar-color: #888 #ffffff00; /* Scroll en gris con pista en blanco */
    scrollbar-width: thin; /* Barra de desplazamiento fina */
  }
</style>
