---
const skills = [
  "📊 Data Analysis",
  "📈 Basic Visualization",
  "💻 Python and SQL",
  "🗂️ Data Cleaning",
  "📉 Descriptive Statistics",
  "🖥️ Spreadsheets",
  "🔍 Pattern Detection",
  "⚙️ Relational Databases",
  "🌐 APIs and Data Extraction",
  "🛠️ Insight Presentation",
  "🗨️ English"
];
---

<section class="p-4 pt-8 bg-white">
  <!-- Título -->
  <h2 class="text-2xl sm:text-3xl font-bold text-pink-500 dark:text-pink-400 text-center sm:text-left">
    Skills
  </h2>

  <!-- Lista de skills -->
  <div class="flex flex-wrap gap-3 my-4 justify-center sm:justify-start">
    {skills.map((skill) => (
      <span
        class="bg-pink-50 text-neutral-800 font-medium px-4 py-2 rounded-md hover:bg-pink-100 transition text-sm sm:text-base"
      >
        {skill}
      </span>
    ))}
  </div>
</section>

