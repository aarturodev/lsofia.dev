---
import Image from "astro/components/Image.astro";
import Email from "./icons/Email.astro";
import GitHub from "./icons/GitHub.astro";
import LinkedIn from "./icons/LinkedIn.astro";

const profile = {
  avatar: "/profile.enc",
  name: "Sof√≠a Chaves",
  role: " Data Engineer",
  bio: `a Junior Data Engineer passionate about turning raw data into actionable insights.

With experience in building ETL pipelines, data modeling, and ensuring data quality, I help teams make smarter, data-driven decisions. Skilled in Python, SQL, and cloud platforms, I focus on creating efficient and scalable solutions that drive impact.`,
  links: [
    {
      url: "https://www.linkedin.com/in/sofia-analitic",
      icon: "LinkedIn",
    },
    {
      url: "https://github.com/sofiachavesalarcon",
      icon: "GitHub",
    },
    {
      url: "mailto:sofita92004@gmail.com",
      icon: "Email",
    },
  ],
};

const SKILL_ICONS: Record<string, any> = {
  GitHub,
  LinkedIn,
  Email,
};
---

<section class="rounded-xl ">
  <article
    class="flex flex-col sm:flex-row justify-between items-center bg-gradient-to-r from-pink-100 to-purple-200 p-6 gap-4"
  >
    <!-- Perfil -->
    <div class="flex flex-col sm:flex-row items-center gap-4 sm:flex-1">
      <img
        loading="eager"
        src={profile.avatar}
        alt="Foto de {profile.name}"
        class="rounded-full w-24 sm:w-28 md:w-36"
      />
      <div class="text-center sm:text-left">
        <p class="text-2xl sm:text-3xl font-semibold text-gray-800">
          {profile.name}
        </p>
        <p class="text-lg sm:text-xl text-gray-500">{profile.role}</p>
      </div>
    </div>

    <!-- Enlaces sociales -->
    <div
      class="flex items-center justify-center gap-3 flex-wrap sm:justify-end w-full sm:w-auto"
    >
      {profile.links.map(({ url, icon }) => {
        const Icon = SKILL_ICONS[icon];
        return (
          <a
            href={url}
            aria-label={icon}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-center h-10 w-10 rounded-full bg-purple-100 text-neutral-900 hover:bg-white dark:hover:bg-neutral-800 dark:hover:text-neutral-50 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-neutral-500 transition-all duration-150"
          >
            <Icon class="h-5 w-5" />
          </a>
        );
      })}
    </div>
  </article>

  <!-- Biograf√≠a -->
  <p
    class="text-base sm:text-lg md:text-xl p-4 text-neutral-700 bg-white mt-4 rounded-lg text-center sm:text-left"
  >
    Hello! üëãüèª I'm <strong>Sofia</strong>, {profile.bio}
  </p>
</section>

