---
const education = [
  {
    "institution": "University of Cundinamarca",
    "degree": "Systems and Computing Engineering",
    "period": "Currently",
    "description":
      "Focused on data analysis, algorithms, and software development."
  },
  {
    "institution": "Canapro School",
    "degree": "Academic High School Diploma",
    "period": "2018",
    "description": "Outstanding performance in mathematics and sciences."
  }
]
---

<section class="p-4 pt-8 bg-white">
  <h2 class="text-2xl font-bold text-pink-500 dark:text-pink-400">Education</h2>
  <ul class="space-y-4 mt-4">
    {
      education.map((item) => (
        <li class="border-l-4 border-pink-300 pl-4">
          <h3 class="text-xl font-semibold text-gray-700">
            {item.institution}
          </h3>
            {item.degree} Â· <span class="text-pink-600 font-light">{item.period}</span>
          {item.description && (
            <p class="text-sm text-neutral-500 mt-2">{item.description}</p>
          )}
        </li>
      ))
    }
  </ul>
</section>
