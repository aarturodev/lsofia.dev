---
const education = [
  {
    "institution": "University of Cundinamarca",
    "degree": "Systems and Computing Engineering",
    "period": "Currently",
    "description":
      "Focused on data analysis, algorithms, and software development."
  },
  {
    "institution": "Canapro School",
    "degree": "Academic High School Diploma",
    "period": "2018",
    "description": "Outstanding performance in mathematics and sciences."
  }
]
---

<section class="p-4 pt-8 bg-white">
  <!-- Título -->
  <h2 class="text-2xl sm:text-3xl font-bold text-pink-500 dark:text-pink-400 text-center sm:text-left">
    Education
  </h2>

  <!-- Lista de educación -->
  <ul class="space-y-6 mt-6">
    {education.map((item) => (
      <li class="border-l-4 border-pink-300 pl-4 sm:pl-6">
        <!-- Institución -->
        <h3 class="text-lg sm:text-xl font-semibold text-gray-700">
          {item.institution}
        </h3>
        <!-- Grado y período -->
        <p class="text-sm sm:text-base text-gray-600">
          {item.degree} · 
          <span class="text-pink-600 font-light">{item.period}</span>
        </p>
        <!-- Descripción opcional -->
        {item.description && (
          <p class="text-sm text-neutral-500 mt-2">{item.description}</p>
        )}
      </li>
    ))}
  </ul>
</section>

