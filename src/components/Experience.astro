---
interface Experience {
  role: string;
  company: string;
  duration: string;
  description: string;
}

const experiences: Experience[] = [
  {
    role: "Senior Data Analyst",
    company: "Data Insights Corp",
    duration: "Jan 2022 · Present",
    description:
      "Led the creation of interactive dashboards and predictive analysis using Python, SQL, and Power BI. Collaborated with cross-functional teams to optimize business processes based on data insights.",
  },
  {
    role: "Data Visualization Specialist",
    company: "Tech Analytics Solutions",
    duration: "Aug 2020 · Dec 2021",
    description:
      "Developed advanced reports in Tableau and Power BI to monitor key performance metrics (KPIs). Trained internal teams on the use of visualization and analysis tools.",
  },
  {
    role: "Data Analysis Intern",
    company: "BigData Analytics",
    duration: "Jun 2018 · Jan 2019",
    description:
      "Performed data cleaning and transformation using Excel and Python. Assisted in creating basic reports for client projects and optimized relational databases.",
  },
];
---


<section id="experience" class="px-4 sm:px-6 pt-8 bg-gray-50 rounded-lg">
  <!-- Título -->
  <h2 class="text-2xl sm:text-3xl font-bold text-pink-500 dark:text-pink-400 text-center sm:text-left">
    Experience
  </h2>

  <!-- Experiencias -->
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mt-6">
    {experiences.map((exp) => (
      <div class="p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow">
        <!-- Rol -->
        <h3 class="text-lg sm:text-xl font-semibold text-gray-700">
          {exp.role}
        </h3>

        <!-- Empresa y duración -->
        <div class="flex justify-between items-center mt-2">
          <strong class="text-sm sm:text-base text-gray-600 font-light">
            {exp.company}
          </strong>
          <span class="text-sm text-pink-500 font-light">
            {exp.duration}
          </span>
        </div>

        <!-- Descripción -->
        {exp.description && (
          <p class="text-sm sm:text-base text-gray-600 mt-4">
            {exp.description}
          </p>
        )}
      </div>
    ))}
  </div>
</section>

